@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>view the reports generated by background jobs.</p>
    <form method="post" asp-controller="Home" asp-action="CreateReport">
        <select name="Columns" class="selectpicker" multiple>
            <option value="EventId" selected>Event Id</option>
            <option value="EventTitle" selected>Event Title</option>
            <option value="EventDateTime">Event DateTime</option>
            <option value="EventStatus" selected>Event Status</option>
            <option value="IndividualName" selected>Individual Name</option>
        </select>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
